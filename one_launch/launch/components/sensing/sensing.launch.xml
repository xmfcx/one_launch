<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- sensing_component_container -->
  <node pkg="rclcpp_components" exec="component_container_mt" name="sensing_component_container">
  </node>

  <load_composable_node target="sensing_component_container">

    <composable_node pkg="awf_velodyne_pointcloud" plugin="velodyne_pointcloud::Convert" name="velodyne_convert_node" namespace="">
      <remap from="/image" to="/burgerimage"/>
      <param name="history" value="keep_last"/>
      <extra_arg name="use_intra_process_comms" value="true"/>
    </composable_node>

  </load_composable_node>

</launch>
